{
	"name": "api-autodromo.alexgalhardo.com",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"build": "npx @nestjs/cli build",
		"start": "npx nest start",
		"dev": "npx nest start --watch",
		"start:debug": "npx nest start --debug --watch",
		"start:prod": "node dist/src/main",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --runInBand --detectOpenHandles --forceExit --config ./tests/jest-e2e.json",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
		"prisma:migrate": "npx prisma migrate dev",
		"prisma:generate": "npx prisma generate",
		"prisma:push": "npx prisma db push",
		"prisma:studio": "npx prisma studio",
		"prisma:seed": "npx prisma db seed",
		"prisma:format": "npx prisma format",
		"prepare": "npx husky install"
	},
	"prisma": {
		"seed": "ts-node --transpile-only --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
	},
	"dependencies": {
		"@nestjs/common": "^10.3.1",
		"@nestjs/config": "^3.1.1",
		"@nestjs/core": "^10.3.1",
		"@nestjs/platform-express": "^10.3.1",
		"@prisma/client": "^5.9.0",
		"@types/node": "^20.11.10",
		"bcrypt": "^5.1.1",
		"dotenv": "^16.4.1",
		"jsonwebtoken": "^9.0.2",
		"nodemailer": "^6.9.8",
		"reflect-metadata": "^0.1.12",
		"remark-lint": "^9.1.2",
		"rxjs": "^7.8.1",
		"yup": "^1.3.3"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.3.0",
		"@nestjs/schematics": "^10.1.0",
		"@nestjs/testing": "^10.3.1",
		"@swc/cli": "^0.1.63",
		"@swc/core": "^1.3.106",
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.11",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/nodemailer": "^6.4.14",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^6.19.1",
		"@typescript-eslint/parser": "^6.19.1",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"husky": "^9.0.6",
		"jest": "^29.7.0",
		"prettier": "^3.2.4",
		"prisma": "^5.9.0",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.4",
		"ts-jest": "^29.1.2",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.3.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "./",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"modulePaths": [
			"<rootDir>"
		]
	}
}
